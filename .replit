modules = ["python-3.12"]
[agent]
integrations = ["web_scraper:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_packages"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install yfinance plotly pandas-ta scikit-learn beautifulsoup4 joblib && streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "install_packages"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add yfinance pandas-ta plotly scikit-learn joblib beautifulsoup4"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43337
externalPort = 3000
